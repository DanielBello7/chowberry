  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/chowberry/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/chowberry/test/jest-e2e.json",
    "docker:build:dev": "docker-compose build --no-cache && docker image prune -f",
    "docker:build:pro": "docker-compose -f docker-compose.yml build --no-cache && docker image prune -f",
    "docker:pro": "docker-compose -f docker-compose.yml up --remove-orphans",
    "docker:dev": "docker-compose up --remove-orphans",
    "deploy": "npm run docker:build:pro && npm run docker:pro"
  },
  "dependencies": {
