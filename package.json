  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/types/"
    ],
    "moduleNameMapper": {
      "^@app/types(|/.*)$": "<rootDir>/types/$1",
      "^@app/brevo(|/.*)$": "<rootDir>/libs/brevo/src/$1",
      "^@app/cloudinary(|/.*)$": "<rootDir>/libs/cloudinary/src/$1",
      "^@app/commons(|/.*)$": "<rootDir>/libs/commons/src/$1",
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@app/enums(|/.*)$": "<rootDir>/libs/enums/src/$1",
      "^@app/envs(|/.*)$": "<rootDir>/libs/envs/src/$1",
      "^@app/exceptions(|/.*)$": "<rootDir>/libs/exceptions/src/$1",
      "^@app/flutterwave(|/.*)$": "<rootDir>/libs/flutterwave/src/$1",
      "^@app/rmq(|/.*)$": "<rootDir>/libs/rmq/src/$1",
      "^@app/winston(|/.*)$": "<rootDir>/libs/winston/src/$1"
    }
